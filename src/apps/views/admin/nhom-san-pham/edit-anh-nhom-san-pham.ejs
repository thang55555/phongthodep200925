
<%- include("../layout/head", {title: "Admin edit nhóm sản phẩm"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>



	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home">
							<use xlink:href="#stroked-home"></use>
		 				</svg></a></li>
				<li><a href="/admin/nhom-san-pham">Menu sản phẩm</a></li>
				<li>Update ảnh menu sản phẩm</li>
			</ol>
		</div><!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Menu sản phẩm: <%=tieude.tennhomsanpham%></h1>
			</div>
		</div><!--/.row-->
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="col-md-12">
							<form role="form" method="post" enctype="multipart/form-data" action="/admin/upload-anh-nhom-san-pham/<%=editanh._id%>">

								<div class="form-group">
									<input name="images" type="file" >
									<br>
								</div>
								<div class="form-group">
									<label>Nhóm sản phẩm </label>
									<select name="tennhomsanpham_id" class="form-control">
										<% for(item of danhmuc){%>
										<option <%= editanh.anhnhom_id==item.id && "selected" %> value="<%=item._id%>"> <%=item.tennhomsanpham%></option>
										<%}%>
									</select>
								</div>
								<div class="form-group">
									<label>Mô tả ảnh menu sản phẩm</label>
									<textarea id="description" required name="content" class="form-control" value="" rows="3"><%=editanh.content%></textarea>
									<script>
										CKEDITOR.replace('description',{
                                            extraPlugins:'filebrowser',
                                            filebrowserBrowseUrl:'/list',//upload location
                                            filebrowserUploadMethod:'form',
                                            filebrowserUploadUrl:'/upload'//route
                                        });
									</script>
								</div>
								<button type="submit" name="sbm" class="btn btn-success">Update</button>
								<button type="reset" class="btn btn-default">Làm mới</button>
						</div>

						</form>
					</div>
				</div>
			</div>
		</div><!-- /.col-->
	</div> <!--/.main-->

	<script src="js/jquery-1.11.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/bootstrap-table.js"></script>

	<%- include("../layout/footer")%>
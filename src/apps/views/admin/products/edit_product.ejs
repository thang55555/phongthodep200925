<%- include("../layout/head", {title: "Edit Product"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
                <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li><a href="">Quản lý sản phẩm</a></li>
				<li class="active"><%=product.name%></li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Sản phẩm: <%=product.name%></h1>
			</div>
        </div><!--/.row-->
        <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-md-6">
                                <form action="/admin/products/update/<%=product.id%>" role="form" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Tên sản phẩm (Thẻ title):</label>
                                    <input type="text" name="name" required class="form-control" value="<%=product.name%>"  placeholder="">
                                </div>
                                                                
                                <div class="form-group">
                                    <label>Giá gốc sản phẩm</label>
                                    <input type="number" name="price" required value="<%=product.price%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Giá sale sản phẩm</label>
                                    <input type="number" name="pricesale" required value="<%=product.pricesale%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Phong Cách</label>
                                    <input type="text" name="dotuoi" required value="<%=product.dotuoi%>" class="form-control">
                                </div>    
                                <div class="form-group">
                                    <label>Giới tính dùng</label>
                                    <input type="text" name="gioitinh" required value="<%=product.gioitinh%>" class="form-control">
                                </div>                  
                                <div class="form-group">
                                    <label>Nhóm hương</label>
                                    <input type="text" name="nhomhuong" required value="<%=product.nhomhuong%>" class="form-control">
                                </div>  
                                
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ảnh sản phẩm</label>
                                    <input type="file" name="images" multiple>
                                    <br>
                                    <div>
                                        <img width="160px" src="../site/images/New folder/<%=product.images[0].image%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Danh mục</label>
                                    <select name="categori_id" class="form-control">
                                        <% for(category of categories){%>
                                        <option <%= product.cat_id==category.id && "selected" %> value=<%=category._id%>><%=category.title%></option>
                                        <% }%>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    <select name="trangthai" class="form-control">
                                        <option <%= product.trangthai==1 && "selected" %> value=1 >Còn hàng</option>
                                        <option <%= product.trangthai==0 && "selected" %> value=0 >Hết hàng</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                 
                                    <div class="checkbox">
                                        <label>
                                            <input <%= product.spmoi==1 && "checked" %> name="spmoi" type="checkbox" value=on>Sản phẩm mới
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input <%= product.spsale==1 && "checked" %> name="spsale" type="checkbox" value=on>sản phẩm sale
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input <%= product.spbanchay==1 && "checked" %> name="spbanchay" type="checkbox" value=on>sản phẩm bán chạy
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                        <label>Mô tả sản phẩm</label>
                                        <textarea id="description" name="content" required class="form-control" rows="3"><%=product.content%></textarea>
                                        <script>
                                            CKEDITOR.replace( 'description' );
                                        </script>
                                    </div>
                                <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                                <button type="reset" class="btn btn-default">Làm mới</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div><!-- /.col-->
            </div><!-- /.row -->
		
	</div>	<!--/.main-->	
    <%- include("../layout/footer")%>

<%- include("../layout/head", {title: "Add Product" })%>
    <%- include("../layout/header")%>
        <%- include("../layout/siderbar")%>

            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="#"><svg class="glyph stroked home">
                                    <use xlink:href="#stroked-home"></use>
                                </svg></a></li>
                        <li><a href="/admin/products/create">Quản lý sản phẩm</a></li>
                        <li class="active">Thêm sản phẩm</li>
                    </ol>
                </div><!--/.row-->

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Thêm sản phẩm</h1>
                    </div>
                </div><!--/.row-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <form action="/admin/products/store" role="form" method="post"
                                        enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Tên sản phẩm (Thẻ title):</label>
                                            <input required name="name" class="form-control" placeholder="">
                                        </div>
                                                                        
                                        <div class="form-group">
                                            <label>Giá gốc sản phẩm</label>
                                            <input required name="price" type="number" min="0" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Giá sale sản phẩm</label>
                                            <input required name="pricesale" type="number" min="0" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Phong cách</label>
                                            <input required name="dotuoi" type="text" class="form-control">
                                        </div>    
                                        <div class="form-group">
                                            <label>Giới tính dùng</label>
                                            <input required name="gioitinh" type="text" class="form-control">
                                        </div>    
                                        <div class="form-group">
                                            <label>Nhóm hương</label>
                                            <input required name="nhomhuong" type="text" class="form-control">
                                        </div>  

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ảnh sản phẩm</label>

                                        <input name="images" type="file" multiple required/>
                                        <br>

                                    </div>
                                    <div class="form-group">
                                        <label>Danh mục</label>
                                        <select name="categori_id" class="form-control">
                                            <% for(category of categories){%>
                                                <option value=<%=category._id %>><%=category.title%>
                                                </option>
                                                <%}%>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        <select name="trangthai" class="form-control">
                                            <option value=1 selected>Còn hàng</option>
                                            <option value=0>Hết hàng</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input name="spmoi" type="checkbox" value="on">Sản phẩm mới
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input name="spbanchay" type="checkbox" value="on">Sản phẩm bán chạy
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input name="spsale" type="checkbox" value="on">Sản phẩm sale
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Mô tả sản phẩm</label>
                                        <textarea id="description" required name="content" class="form-control" rows="3"></textarea>
                                        <script>
                                            CKEDITOR.replace( 'description' );
                                        </script>
                                    </div>
                                    <button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>
                                    <button type="reset" class="btn btn-default">Làm mới</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div><!-- /.col-->
                </div><!-- /.row -->

            </div> <!--/.main-->

            <%- include("../layout/footer")%>
<%- include("../layout/head", {title: "Admin update sản phẩm"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>



    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="/admin/dashboard"><svg class="glyph stroked home">
                            <use xlink:href="#stroked-home"></use>
                        </svg></a></li>
                <li><a href="/admin/danh-sach-san-pham">Danh sách sản phẩm</a></li>
                <li>Update sản phẩm</li>
            </ol>
        </div><!--/.row-->

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Sản phẩm: <%=product.tieudesp%></h1>
            </div>
        </div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-6">
                            <form name="frm" role="form" method="post" enctype="multipart/form-data" action="/admin/upload-san-pham/<%=product._id%>?page=<%=page%>">

                                <div class="form-group">
                                    <label>Tiêu đề sản phẩm (Thẻ title)<span id="tieudesp"></span></label>
                                    <input required onkeyup="tieudesp2(this.value)"  name="tieudesp" type="text" value="<%=product.tieudesp%>"  class="form-control"
                                        placeholder="Tiêu đề sản phẩm...">
                                        <script>
                                            function tieudesp2(val1) {
                                                document.frm.tieudesp.value = val1;
                                                document.getElementById("tieudesp").innerHTML =": " + val1.length + " từ";
                                            }
                                        </script>
                                </div>
                                <div class="form-group">
                                    <label>Thẻ meta description<span id="metadescription"></span></label>
                                    <input required onkeyup="eventHandler(this.value)" name="metadescription" type="text" value="<%=product.metadescription%>" class="form-control"
                                        placeholder="Meta description...">
                                        <script>
                                            function eventHandler(val) {
                                                document.frm.metadescription.value = val;
                                                document.getElementById("metadescription").innerHTML =": " + val.length + " từ";
                                            }
                                        </script>
                                </div>
                                <div class="form-group">
                                    <label>Thẻ meta keywords<span id="metakeywords"></span></label>
                                    <input required onkeyup="metakeywords2(this.value)" name="metakeywords" type="text" value="<%=product.metakeywords%>" class="form-control"
                                        placeholder="Meta keywords...">
                                        <script>
                                            function metakeywords2(val3) {
                                                document.frm.metakeywords.value = val3;
                                                document.getElementById("metakeywords").innerHTML =": " + val3.length + " từ";
                                            }
                                        </script>
                                </div>






                                <div class="form-group">
                                    <label>Chủ đầu tư</label>
                                    <input required name="chudautu" value="<%=product.chudautu%>" type="text" class="form-control" placeholder="">
                                </div>

                                <div class="form-group">
                                    <label>Công năng</label>
                                    <input required name="congnang" value="<%=product.congnang%>" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <input required name="diachi" value="<%=product.diachi%>" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Kinh phí</label>
                                    <input required name="kinhphi" value="<%=product.kinhphi%>" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Loại hình</label>
                                    <input required name="loaihinh" value="<%=product.loaihinh%>" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Đơn vị thiết kế</label>
                                    <input required name="donvi" value="<%=product.donvi%>" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Thông số</label>
                                    <input required name="dientich" value="<%=product.dientich%>" type="text" class="form-control">
                                </div>


                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Năm thi công</label>
                                <input required name="namthicong" type="text" value="<%=product.namthicong%>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Nhóm sản phẩm</label>
                                <select name="danhmuc_id" class="form-control">
                                    <% for(item of danhmuc){%>
                                    <option <%= product.nhomsp_id==item.id && "selected" %> value="<%=item._id%>"> <%=item.tennhomsanpham%></option>
                                    <%}%>
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input <%= product.spdv==1 && "checked" %> name="spdv" type="checkbox" value="on">Thêm vào sản phẩm dịch vụ
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Nhóm dịch vụ</label>
                                <select name="dichvu_id" class="form-control">
                                    <% for(item of dichvu){%>
                                        <option <%= product.menudichvu_id==item.id && "selected" %> value="<%=item._id%>">
                                            <%=item.menudichvu%>
                                        </option>
                                        <%}%>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Ảnh sản phẩm</label>
                                <input name="images" type="file" multiple>
                                <br>
                            </div>


                            <div class="form-group">
                                <label>Mô tả sản phẩm</label>
                                <textarea id="description" required name="content" class="form-control" rows="3"><%=product.content%></textarea>
                                <script>
                                    CKEDITOR.replace('description',{
                                            extraPlugins:'filebrowser',
                                            filebrowserBrowseUrl:'/list',//upload location
                                            filebrowserUploadMethod:'form',
                                            filebrowserUploadUrl:'/upload'//route
                                         });
                                </script>
                                
                            </div>

                            <div class="form-check form-switch">
                                <input <%= product.nhap==1 && "checked" %> class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" name="nhap" value="on">
                                <label class="form-check-label" for="flexSwitchCheckChecked">Đăng ngay</label>
                              </div>


                            <button name="sbm" type="submit" class="btn btn-success">upload</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div><!-- /.col-->
        </div><!-- /.row -->

    </div> <!--/.main-->

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <%- include("../layout/footer")%>
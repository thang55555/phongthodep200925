<%- include("../layout/head", {title: "Admin thước lỗ ban"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home">
							<use xlink:href="#stroked-home"></use>
						</svg></a></li>
				<li>Thước lỗ ban</li>
			</ol>
		</div><!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Thước lỗ ban</h1>
			</div> 
		</div><!--/.row-->
	
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<table data-toolbar="#toolbar" data-toggle="table">

							<thead>
								<tr>
									<th data-field="id" data-sortable="true">ID</th>
									<th data-field="name" data-sortable="true">Hướng dẫn</th>
                                    <th>Title</th>
                                    <th>Meta description</th>
									<th>Meta key words</th>
									<th data-field="price" data-sortable="true">Hành Động</th>
								</tr>
							</thead>
							<tbody>
								<% for(item of product){%>
								<tr>
									<td>1</td>
									<td><div class="antext"><%-item.content%></div></td>
									<td><div class="antext"><%-item.title%></div></td>
									<td><div class="antext"><%-item.metadescription%></div></td>
									<td><div class="antext"><%-item.metakeywords%></div></td>
									
                                   <td class="form-group">
										<a href="/admin/edit-thuoc-lo-ban/<%=item._id%>" class="btn btn-primary"><i
												class="glyphicon glyphicon-pencil"></i></a>
									</td>
									
								</tr>
								<%}%>
							</tbody>
							
						</table>
					</div>
				</div>
			</div>
		</div><!--/.row-->
	</div> <!--/.main-->

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-table.js"></script>



    <%- include("../layout/footer")%>
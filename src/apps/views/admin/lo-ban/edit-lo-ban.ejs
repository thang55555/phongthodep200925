<%- include("../layout/head", {title: "Admin update thước lỗ ban"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>


    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
                <li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li><a href="/admin/thuoc-lo-ban">Thước lỗ ban</a></li>
				<li>Update thước lỗ ban</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row"> 
			<div class="col-lg-12">
				<h1 class="page-header">Update thước lỗ ban</h1>
			</div>
        </div><!--/.row-->
        <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-md-6">
                                <form action="/admin/update-thuoc-lo-ban/<%=product._id%>" role="form" method="post" enctype="multipart/form-data">
                                
                                    <div class="form-group">
                                        <label>Content thước lỗ ban</label>
                                        <textarea id="description" required name="content" class="form-control" value="" rows="3"><%=product.content%></textarea>
                                        <script>
                                            CKEDITOR.replace( 'description' ,{
                                            extraPlugins:'filebrowser',
                                            filebrowserBrowseUrl:'/list',//upload location
                                            filebrowserUploadMethod:'form',
                                            filebrowserUploadUrl:'/upload'//route
                                        });
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input required onkeyup="eventHandler(this.value)" name="title" value="<%=product.title%>" type="text" class="form-control">
                                        <script>
                                            function eventHandler(val) {
                                                document.frm.metadescription.value = val;
                                                document.getElementById("metadescription").innerHTML =": " + val.length + " từ";
                                            }
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <label>Meta description</label>
                                        <input required onkeyup="metakeywords2(this.value)" name="metadescription" value="<%=product.metadescription%>" type="text" class="form-control">
                                        <script>
                                            function metakeywords2(val3) {
                                                document.frm.metakeywords.value = val3;
                                                document.getElementById("metakeywords").innerHTML =": " + val3.length + " từ";
                                            }
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <label>Meta key words</label>
                                        <input onkeyup="tieudesp2(this.value)" required name="metakeywords" value="<%=product.metakeywords%>" type="text" class="form-control">
                                        <script>
                                            function tieudesp2(val1) {
                                                document.frm.tieudesp.value = val1;
                                                document.getElementById("tieudesp").innerHTML =": " + val1.length + " từ";
                                            }
                                        </script>
                                    </div>
                 
                            

                                <button name="sbm" type="submit" class="btn btn-success">Update</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div><!-- /.col-->
            </div><!-- /.row -->
		
	</div>	<!--/.main-->	

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <%- include("../layout/footer")%>
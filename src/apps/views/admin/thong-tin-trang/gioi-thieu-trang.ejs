<%- include("../layout/head", {title: "Admin giới thiệu trang"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home">
							<use xlink:href="#stroked-home"></use>
						</svg></a></li>
				<li>Giới thiệu trang</li>
			</ol>
		</div><!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Giới thiệu trang</h1>
			</div> 
		</div><!--/.row-->
	
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<table data-toolbar="#toolbar" data-toggle="table">

							<thead>
								<tr>
									<th data-field="id" data-sortable="true">ID</th>
									<th data-field="name" data-sortable="true">Giới thiệu chung</th>
                                    <th>video giới thiệu</th>
                                    <th>Tầm nhìn</th>
                                    <th>Sứ mệnh</th>
                                    <th>Ảnh Banner tầm nhìn, sứ mệnh</th>
                                    <th>Giá trị cốt lõi</th>
                                    <th>Ảnh Banner Giá trị cốt lõi</th>
                                    <th>Đội ngũ kỹ thuật</th>
                                    <th>Ảnh Banner đội ngũ kỹ thuật</th>
									<th data-field="price" data-sortable="true">Hành Động</th>
								</tr>
							</thead>
							<tbody>
								<% for(Gioithieu of gioithieu){%>
								<tr>
									<td>1</td>
									<td><div class="antext"><%-Gioithieu.gioithieuchung%></div></td>
									<td> <iframe height="150px" width="150px" src="<%=Gioithieu.linkvideo%>"
                                        title="YouTube video player" frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                        referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe></td>
									<td><div class="antext"><%-Gioithieu.content_tamnhin%></div></td>
									<td ><div class="antext"><%-Gioithieu.content_sumenh%></div></td>
                                    <td><img src="../site/images/update/<%=Gioithieu.img_tamnhin%>" style="height: 150px; width: 150px;"/></td>
									<td><div class="antext"><%-Gioithieu.content_cotloi%></div></td>
									<td><img src="../site/images/update/<%=Gioithieu.img_cotloi%>" style="height: 150px; width: 150px;"/></td>
									<td><div class="antext"><%-Gioithieu.content_kythuat%></div></td>
									<td><img src="../site/images/update/<%=Gioithieu.img_kythuat%>" style="height: 150px; width: 150px;"/></td>
                                    <td class="form-group">
										<a href="/admin/edit-gioi-thieu-trang/<%=Gioithieu._id%>" class="btn btn-primary"><i
												class="glyphicon glyphicon-pencil"></i></a>
									</td>
									
								</tr>
								<%}%>
							</tbody>
							
						</table>
					</div>
				</div>
			</div>
		</div><!--/.row-->
	</div> <!--/.main-->

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-table.js"></script>



    <%- include("../layout/footer")%>
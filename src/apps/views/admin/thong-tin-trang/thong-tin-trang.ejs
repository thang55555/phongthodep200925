<%- include("../layout/head", {title: "Admin thông tin trang"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>

	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home">
							<use xlink:href="#stroked-home"></use>
						</svg></a></li>
				<li>Thông tin trang</li>
			</ol>
		</div><!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Thông tin trang</h1>
			</div>
		</div><!--/.row-->
	 
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<table data-toolbar="#toolbar" data-toggle="table">

							<thead>
								<tr>
									<th data-field="id" data-sortable="true">ID</th>
									<th data-field="name" data-sortable="true">Số điện thoại</th>
									<th data-field="price" data-sortable="true">Email</th>
									<th>Logo cty</th>
									<th>video trang chủ</th>
									<th>Tiêu để tên công ty</th>
									<th>Địa chỉ công ty</th>
									<th>Giới thiệu chân trang</th>
									<th>Tên tiêu đề VP thiết kế</th>
									<th>Địa chỉ VP thiết kế</th>
									<th>Tên tiêu đề Map</th>
									<th>Địa chỉ Map</th>
									<th>Hành Động</th>
								</tr>
							</thead>
							<tbody>
								<% for(thongtin of thongtintrang){%>
								<tr>
									<td>1</td>
									<td><%=thongtin.sdt%></td>
									<td><%=thongtin.email%></td>
									<td style="text-align: center"><img width="150" height="150"
											src="../site/images/update/<%=thongtin.images%>" /></td>
									<td ><video src="../site/images/update/<%=thongtin.video%>" width="200" height="200" autoplay="" muted="" loop="" playsinline=""></video></td>
									<td><%=thongtin.tencongty%></td>
									<td><%=thongtin.diachicty%></td>
									<td><div class="antext"><%=thongtin.gioithieu%></div></td>
									<td><%=thongtin.tieudeFB%></td>
									<td><%=thongtin.diachiFB%></td>
									<td><%=thongtin.tieudeMap%></td>
									<td><%=thongtin.diachiMap%></td>
									<td class="form-group">
										<a href="/admin/edit-thong-tin-trang/<%=thongtin._id%>" class="btn btn-primary"><i
												class="glyphicon glyphicon-pencil"></i></a>
									</td>
								</tr>
								<%}%>
							</tbody>
							
						</table>
					</div>
				</div>
			</div>
		</div><!--/.row-->
	</div> <!--/.main-->

	<script src="js/jquery-1.11.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/bootstrap-table.js"></script>


	<%- include("../layout/footer")%>
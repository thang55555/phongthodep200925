<%- include("../layout/head", {title: "Admin update thông tin trang"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>


    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="/admin/dashboard"><svg class="glyph stroked home">
                            <use xlink:href="#stroked-home"></use>
                        </svg></a></li>
                <li><a href="/admin/thong-tin-trang">Thông tin trang</a></li>
                <li>Update thông tin trang</li>
            </ol>
        </div><!--/.row-->

        <div class="row"> 
            <div class="col-lg-12">
                <h1 class="page-header">Update thông tin trang</h1>
            </div>
        </div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-6">
                            <form role="form" method="post" action="/admin/update-thong-tin-trang/<%=thongtin._id%>" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input required name="sdt" type="text" class="form-control" value="<%=thongtin.sdt%>"
                                        placeholder="">
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input required name="email" type="text" value="<%=thongtin.email%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Tiêu để tên công ty</label>
                                    <input required name="tencongty" type="text" value="<%=thongtin.tencongty%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ công ty</label>
                                    <input required name="diachicty" type="text" value="<%=thongtin.diachicty%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Giới thiệu chân trang footer</label>
                                    <input required name="gioithieu" type="text" value="<%=thongtin.gioithieu%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Tiêu đề page Facebook</label>
                                    <input required name="tieudeFB" type="text" value="<%=thongtin.tieudeFB%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ page Facebook</label>
                                    <input required name="diachiFB" type="text" value="<%=thongtin.diachiFB%>" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Link page Facebook</label>
                                    <input required name="linkFB" type="text" value="<%=thongtin.linkFB%>" class="form-control">
                                </div>


                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tiêu đề Map</label>
                                <input required name="tieudeMap" type="text" value="<%=thongtin.tieudeMap%>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ Map</label>
                                <input required name="diachiMap" type="text" value="<%=thongtin.diachiMap%>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Link địa chỉ map</label>
                                <input required name="linkMap" type="text" value="<%=thongtin.linkMap%>" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Ảnh Logo cty</label>
                                <input required  name="images" type="file">
                                <br>
                                <div>
                                    <img src="../site/images/update/<%=thongtin.images%>" width="150px" height="150px">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Video trang chủ</label>
                                <input required  name="images" type="file">
                            </div>

                            <button name="sbm" type="submit" class="btn btn-success">update</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div><!-- /.col-->
        </div><!-- /.row -->

    </div> <!--/.main-->

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>


    <%- include("../layout/footer")%>
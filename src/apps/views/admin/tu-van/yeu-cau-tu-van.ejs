
<%- include("../layout/head", {title: "Danh sách yêu cầu tư vấn"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>




	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home">
							<use xlink:href="#stroked-home"></use>
						</svg></a></li>
				<li>Danh sách yêu cầu</li>
			</ol>
		</div><!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Danh sách yêu cầu</h1>
			</div>
		</div><!--/.row-->
		

		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<table data-toolbar="#toolbar" data-toggle="table">

							<thead>
								<tr>
									<th data-field="id" data-sortable="true">ID</th>
									<th>Họ tên KH</th>
									<th>Liên hệ</th>
									<th>Email</th>
									<th>Địa chỉ</th>
									<th>Loại công trình</th>
									<th>Mức đầu tư</th>
									<th>Yêu cầu cụ thể</th>
									<th>Ngày yêu cầu</th>
									<th>Trạng thái</th>
									<th>Hành động</th>
								</tr>
							</thead>
							<tbody>
								<% for(item of product){%>
								<tr>
									<td><%=stt++%></td>
									<td><%=item.name%></td>
									<td><%=item.lienhe%></td>
									<td><%=item.email%></td>
									<td><%=item.diachi%></td>
									<td><%=item.loaicongtrinh%></td>
									<td><%=item.mucdautu%></td>
									<td><%=item.yeucau%></td>
									<td><%= new Intl.DateTimeFormat('en-US').format(item.createdAt)%></td>
									<td> 
										
										<span
                                             class="label label-<%=item.trangthai? 'success': 'danger'%>">
											 <%=item.trangthai? "Đã xử lý" : "Chưa xử lý" %>
                                        </span>
									</td>
									<td class="form-group"> 
										<form action="/admin/edit-yeu-cau-tu-van/<%=item.id%>" role="form" method="post">
								
												<select name="trangthai" class="form-control">
													<option value="<%=item.trangthai%>">Chọn</option>
													<option value="true">Đã xử lý</option>
													<option value="flash"> Chưa xử lý</option>
												
												</select>
												
												<button type="submit" name="sbm" class="btn btn-success">Update</button>
											</form>
									</td>
								</tr>
								<%}%>
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div><!--/.row-->
	</div> <!--/.main-->


	<script src="js/jquery-1.11.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/bootstrap-table.js"></script>

	<%- include("../layout/footer")%>
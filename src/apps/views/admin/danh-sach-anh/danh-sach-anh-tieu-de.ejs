<%- include("../layout/head", {title: "ADMIN NAM THÀNH PHÁT SHOP"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>


	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="padding-top: 3%;">
	 <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f0f2f5;
      padding: 20px;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 20px;
    }

    .photo-card {
      position: relative;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
      cursor: pointer;
    }

    .photo-card:hover {
      transform: translateY(-4px);
    }

    .photo-card img {
      width: 100%;
      height: 160px;
      object-fit: cover;
      display: block;
    }

    .photo-footer {
      text-align: center;
      font-size: 14px;
      color: #555;
      padding: 10px;
    }

    .delete-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: rgba(220, 53, 69, 0.9);
      color: #fff;
      border: none;
      padding: 6px 10px;
      font-size: 13px;
      border-radius: 5px;
      cursor: pointer;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .photo-card:hover .delete-btn {
      opacity: 1;
    }

    .delete-btn:hover {
      background-color: rgba(200, 35, 50, 0.95);
    }
  </style>
    <h2>DANH SÁCH ẢNH TIÊU ĐỀ </h2>

<div class="gallery">
  <% for(item of image) { %>
    <div class="photo-card" data-id="<%= item._id %>">
      <img src="../site/images/update/<%= item.images %>" alt="<%= item.images %>">
      <button class="delete-btn" onclick="deleteImage(this, '<%= item._id %>')">Xoá</button>
      <div class="photo-footer"><%= item.images %></div>
    </div>
  <% } %>
</div>

<script>
  function deleteImage(button, id) {
    if (confirm("Bạn có chắc muốn xoá ảnh này?")) {
      fetch(`/admin/danh-sach-anh/delete-tieu-de/${id}`, {
        method: 'DELETE',
      })
      .then(response => {
        if (response.ok) {
          // Xoá phần tử ảnh khỏi DOM
          button.closest('.photo-card').remove();
        } else {
          alert("Xoá ảnh thất bại!");
        }
      })
      .catch(error => {
        console.error("Lỗi khi xoá ảnh:", error);
        alert("Đã xảy ra lỗi khi kết nối tới server!");
      });
    }
  }
</script>

	</div> <!--/.main-->

	<script src="js/jquery-1.11.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/bootstrap-table.js"></script>
 

	<%- include("../layout/footer")%>
	
<%- include("../layout/head", {title: "Admin update menu dịch vụ"})%>
<%- include("../layout/header")%>
<%- include("../layout/siderbar")%>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="/admin/dashboard"><svg class="glyph stroked home">
                            <use xlink:href="#stroked-home"></use>
                        </svg></a></li>
                <li><a href="/admin/menu-dich-vu">Menu dịch vụ</a></li>
                <li>Update menu dịch vụ</li>
            </ol>
        </div><!--/.row-->

        <div class="row"> 
            <div class="col-lg-12">
                <h1 class="page-header">Menu dịch vụ: <%=category.menudichvu%></h1>
            </div>
        </div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-8">
                            <form role="form" method="post" action="/admin/update-menu-dich-vu/<%=category.id%>" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Tên menu dịch vụ (Thẻ title):</label>
                                    <input required type="text" name="menudichvu" class="form-control"
                                        placeholder="Tên menu dịch vụ..." value="<%=category.menudichvu%>">
                                </div>
                                <div class="form-group">
                                    <input name="images" type="file" >
                                    <br>
                                </div>
                                <div class="form-group">
                                    <label>Mô tả menu dịch vụ</label>
                                    <textarea id="description" required name="content" class="form-control"  rows="3"><%=category.content%></textarea>
                                    <script>
                                        CKEDITOR.replace('description',{
                                            extraPlugins:'filebrowser',
                                            filebrowserBrowseUrl:'/list',//upload location
                                            filebrowserUploadMethod:'form',
                                            filebrowserUploadUrl:'/upload'//route
                                        });
                                    </script>
                                </div>



                                <button type="submit" name="sbm" class="btn btn-success">Upload</button>
                                <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- /.col-->
    </div> <!--/.main-->

    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-table.js"></script>

    <%- include("../layout/footer")%>